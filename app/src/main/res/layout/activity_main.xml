<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/text_view_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="City:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city"
            android:text="Weather:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_temper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_weather"
            android:layout_marginTop="10dp"
            android:text="Temperature:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_temper"
            android:layout_marginTop="10dp"
            android:text="Wind:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_humid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_wind"
            android:layout_marginTop="10dp"
            android:text="Humidity: "
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_view_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_out">

        <EditText
            android:id="@+id/input_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/input_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_city"
            android:hint="Weather"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/input_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_weather"
            android:hint="Temperature"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/input_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_temp"
            android:hint="Wind"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/input_humid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_wind"
            android:hint="Humidity"
            android:minHeight="48dp" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_insert"
        android:layout_below="@id/text_view_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_insert"
        android:text="Show" />

</RelativeLayout>